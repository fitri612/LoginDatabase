<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/group_5__1_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|top"
        android:letterSpacing="0.1"
        android:text="Payment"
        android:textColor="@color/purple_basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|top"
        android:letterSpacing="0.1"
        android:text="BOOKERS"
        android:textColor="@color/purple_basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_1"
        android:layout_width="308dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card"
        android:elevation="4dp"
        android:pathData="M20 0H288C299.046 0 308 8.95431 308 20V160C308 171.046 299.046 180 288 180H20C8.95431 180 0 171.046 0 160V20C0 8.95431 8.95431 0 20 0Z"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/books" />

    <LinearLayout
        android:id="@+id/rectangle_1"
        android:layout_width="301dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/radius_grey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_1">

        <TextView
            android:id="@+id/your_money"
            android:layout_width="83dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal|top"
            android:letterSpacing="0.1"
            android:text="Your Money"
            android:textColor="@color/purple_basic"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rp_10000"
            android:layout_width="94dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-85dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/purple_basic"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal|top"
            android:letterSpacing="0.1"
            android:text="Rp. 10.000" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/plus"


            />

    </LinearLayout>

    <TextView
        android:id="@+id/promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|top"
        android:text="Promo"
        android:textColor="@color/purple_basic"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="301dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
        tools:layout_editor_absoluteX="46dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/group_7" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/group_7" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/group_7" />


    </LinearLayout>

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="35dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|top"
        android:text="@string/show"
        android:textColor="@color/purple_basic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/montserrat"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>